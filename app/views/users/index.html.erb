<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class='table'>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%=user.name%></td>
        <td><button class="btn btn-primary btn-sm"><%= link_to 'Show', user %></button></td>
        <td><button class="btn btn-primary btn-sm"><%= link_to 'Edit', edit_user_path(user) %></button></td>
        <td><button class="btn btn-danger btn-sm"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn btn-success"><%= link_to 'New User', new_user_path %></button>
